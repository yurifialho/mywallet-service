<div class="container-fluid">
  <div class="container-fluid row">
    <h1><%= @titulo %></h1>
  </div>
  <div class='container-fluid row'>
    <div class="card w-100">
      <div class="card-header">
        <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#addLancamentoModal">
          <i class="material-icons my-0">add</i>
        </button>
      </div>
      <div class="card-body">
        <div class='container-fluid row'>
        <table class="table table-sm table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col" class="text-center col-md-1"><%= t('label.cod') %></th>
              <th scope="col" class="text-center"><%= t('label.nome') %></th>
              <th scope="col" class="text-center"><%= t('label.descricao') %></th>
              <th scope="col" class="text-center"><%= t('label.valor') %></th>
              <th scope="col" class="text-center"><%= t('label.data') %></th>
              <th scope="col" class="text-center"><%= t('model.categoria.titulo') %></th>
              <th scope="col" class="text-center"><%= t('model.tipo.titulo') %></th>
              <th scope="col" class="text-center col-md-2"><%= t('label.acao') %></th>
            </tr>
          </thead>
          <tbody>
            <% @lancamentos.each do |lancamento| %>
              <tr>
                <th class="align-middle text-center" scope="row"><%= lancamento.id %></th>
                <td class="align-middle"><%= lancamento.nome %></td>
                <td class="align-middle"><%= lancamento.descricao %></td>
                <td class="align-middle"><%= lancamento.valor %></td>
                <td class="align-middle"><%= lancamento.data.strftime("%d/%m/%Y") %></td>
                <td class="align-middle"><%= lancamento.categoria.descricao %></td>
                <td class="align-middle"><%= lancamento.tipo.descricao %></td>
                <td class="my-0 text-center align-middle">
                  <%= link_to lancamento, class: 'btn btn-outline-primary btn-sm' do %><i class="material-icons my-0">search</i><% end %>
                  <%= link_to edit_lancamento_path(lancamento), class: 'btn btn-outline-warning btn-sm' do %><i class="material-icons my-0">create</i><% end %>
                  <%= link_to lancamento, method: :delete, class: 'btn btn-outline-danger btn-sm', data: { confirm: t('msg.confirm') }  do %><i class="material-icons my-0">clear</i><% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="mx-auto">
          <%= will_paginate @lancamentos %>    
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addLancamentoModal" tabindex="-1" role="dialog" aria-labelledby="addLancamentoModalLabel" aria-hidden="true">
  <%= render 'form_modal', lancamento: @lancamento %>
</div>