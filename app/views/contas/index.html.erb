
<div class="container-fluid">
  <div class="row">
</div>
  </div>
  <div class="container-fluid row">
    <div class="page-header">
      <h1>Conta</h1>
    </div>
  </div>
  <div class='container-fluid row'>
    <%= link_to new_conta_path, class: 'btn btn-success btn-sm' do %><i class="material-icons my-0 align-middle text-center">add</i><% end %>
    <table class="table table-sm table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col" class="text-center col-md-1">Cód.</th>
          <th scope="col" class="text-center">Nome</th>
          <th scope="col" class="text-center col-md-2">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @conta.each do |conta| %>
          <tr>
            <th class="align-middle text-center" scope="row"><%= conta.id %></th>
            <td class="align-middle"><%= conta.nome %></td>
            <td class="my-0 text-center align-middle">
              <%= link_to conta, class: 'btn btn-primary btn-sm' do %><i class="material-icons my-0">search</i><% end %>
              <%= link_to edit_conta_path(conta), class: 'btn btn-warning btn-sm' do %><i class="material-icons my-0">create</i><% end %>
              <%= link_to conta, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' }  do %><i class="material-icons my-0">clear</i><% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @conta %>    
  </div>
</div>